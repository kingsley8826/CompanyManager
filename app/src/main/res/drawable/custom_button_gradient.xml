<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3sdp" />
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3sdp" />
            <gradient android:angle="-90" android:endColor="@color/grey_400" android:startColor="@color/grey_600" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3sdp" />
            <gradient android:angle="-90" android:endColor="#454545" android:startColor="@color/black" />
        </shape>
    </item>
</selector>