<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_company"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp">

            <TextView
                android:id="@+id/tvMotherCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="Tập đoàn FPT"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toStartOf="@id/tvMotherCompany"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="FPT Software"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp">

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/phone" />

            <TextView
                android:id="@+id/txt_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_toEndOf="@id/txt_phone"
                android:text=":" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/txt_dot"
                android:text="0123456789"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp">

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/address" />

            <TextView
                android:id="@+id/txt_dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_toEndOf="@id/txt_address"
                android:text=":" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/txt_dot_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Số 17 Duy Tân, Cầu Giấy, Hà Nội"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>